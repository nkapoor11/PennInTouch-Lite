<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path %>

<br>

<h5>Instructors</h5>

<br>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Pennkey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <% if user.is_instructor %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.pennkey %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>



<br>

